@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (@Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c=>c.Customer.Name)
        @Html.TextBoxFor(c=>c.Customer.Name, new{@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.Customer.BirthDate)
        @Html.TextBoxFor(c=>c.Customer.BirthDate, new{@class = "form-control"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c=>c.Customer.IsSubscribedToNewsletter) Is Subscribed to Newsletter?
        </label>
    </div>
    <div class="form-group">
             @Html.DropDownListFor(c=>c.Customer.MembershipType,new SelectList(Model.MembershipTypesList,"Id","Name"),"Select Membership Type", new{@class = "form-control"})
    </div>
}
