@model Vidly.ViewModels.MovieViewModel

@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div>
        @Html.LabelFor(c => c.Movie.Name)
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(c => c.Movie.ReleaseDate)
        @Html.TextBoxFor(c => c.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(c => c.Movie.NumberInStock)
        @Html.TextBoxFor(c => c.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(c => c.Movie.Genre)
        @Html.DropDownListFor(c => c.Movie.GenreId, new SelectList(Model.GenreList, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
